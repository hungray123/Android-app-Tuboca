<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#faebd7"
    android:orientation="vertical"
    tools:context="VocabularyFruits.Vocabulary_fruits">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/bg_sports_title"
       android:orientation="vertical">
       <ImageView
           android:id="@+id/bacFruit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="20dp"
           android:src="@drawable/ic_baseline_close_24"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text=" FRUITS "
           android:textSize="30dp"
           android:fontFamily="@font/aclonica"
           android:background="@drawable/boder_line_white"
           android:layout_gravity="center"
           android:padding="10dp"
           android:layout_marginBottom="10dp"
           android:textAllCaps="true"
           android:textColor="@color/white" />
   </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Các loại trái cây"
        android:textSize="25dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="' Ăn trái cây rất tốt cho sức khỏe '"
        android:layout_marginStart="25dp"
        android:textSize="16dp"
        android:textStyle="italic"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="60dp"
        android:layout_gravity="center"
        android:paddingEnd="60dp"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/sound123"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="6dp"

           android:layout_marginStart="10dp"
           android:layout_gravity="left"
           android:src="@drawable/vol1"/>

       <ImageView
           android:id="@+id/backHome"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="20dp"
           android:layout_marginBottom="20dp"
           android:background="@drawable/bg_home_32"
           android:padding="6dp"
           android:src="@drawable/ic_baseline_home_24" />
   </RelativeLayout>






</LinearLayout>