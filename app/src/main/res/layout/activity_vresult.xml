<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
     android:background="@drawable/bg_vresult"
    tools:context="Vocabulary.VResult">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/firework"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/firework" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/gift"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="246dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/gift5" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fly"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="90dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/fly" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/robot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="60dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/robot" />

    <TextView
        android:id="@+id/btV_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gift"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_app_10"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Next" />


</RelativeLayout>